<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
/*
here we create inner bean so we do not need to create 
other bean 
in person class we use getter & setter 
in phone class we also use getter & setter 
*/
<bean id="person" class="com.bean.Person">

<property name="fname" value="ABCs"></property>

<property name="phone">
		<bean id="phone" class="com.bean.Phone">
		 	<property name="pno" value="132"></property>
		</bean>
</property>

</bean>

</beans>
